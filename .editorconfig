# .editorconfig

# Top-most EditorConfig file
root = true

# Universal defaults
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JavaScript files
[*.{js,mjs,cjs}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Python files
[*.py]
indent_size = 4

# Makefiles
[Makefile]
indent_style = tab

# Large files or specific formats
[*.{txt,log}]
insert_final_newline = false
trim_trailing_whitespace = false
